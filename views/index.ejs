<% include partials/header %>

<div class="ui main text container">
  <div class="ui huge header">RESTful Blog App</div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% blogs.forEach((b) => { %>
        <div class="item">
          <div class="image">
            <img src="<%= b.image %>">
          </div>
          <div class="content">
            <a class="header" href="/blogs/<%= b._id %>"><%= b.title %></a>
            <div class="meta">
              <span>Created: <%= b.created.toDateString() %></span>
            </div>
            <div class="description">
              <p><%- b.body.substring(0, 100) %>...</p>
            </div>
            <div class="extra">
              <a class="ui floated basic violet button" href="/blogs/<%= b._id %>">
                Read More
                <i class="right chevron icon"></i>
              </a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</div>



<% include partials/footer %>
