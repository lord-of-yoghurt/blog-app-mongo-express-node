<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit Blog</div>
  <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="post">
    <div class="field">
      <label for="title">Title</label>
      <input id="title" type="text" name="blog[title]" value="<%= blog.title %>">
    </div>
    <div class="field">
      <label for="imgURL">Image URL</label>
      <input id="imgURL" type="text" name="blog[image]" value="<%= blog.image %>">
    </div>
    <div class="field">
      <label for="body">Blog content</label>
      <textarea id="body" type="text" name="blog[body]" rows="8" cols="80"><%= blog.body %></textarea>
    </div>
    <input class="ui blue basic button" type="submit" value="Whoosh">
  </form>
</div>

<% include partials/footer %>
